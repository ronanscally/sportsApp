<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


    <fragment android:name="com.example.sportsapp.ListEventsFragment"
              android:id="@+id/listFragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent" />
    
    <fragment android:name="com.example.sportsapp.CreateEventFragment"
              android:id="@+id/createFragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent" />
    
    <fragment android:name="com.example.sportsapp.ViewEventFragment"
              android:id="@+id/viewFragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent" />
    
    <fragment android:name="com.facebook.widget.UserSettingsFragment"
              android:id="@+id/userSettingsFragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent" />

</LinearLayout>

